<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br  />
  Ingredients<br />
  <%= f.fields_for  :ingredients do |ingredient|  %>
    <%= f.ingredient.label  :name %>
    <%= f.ingredient.text_field :name %><br />
    <%= f.ingredient.label  :quantity %>
    <%= f.ingredient.text_field :quantity %><br />
    <% end  %>
    <br /><br />
    <%= f.submit %>
<% end %>
